<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns.top">
            <container name="category.view.container" htmlTag="div" htmlClass="category-view" after="-">
                <referenceBlock name="category.image" remove="true"/>
                <referenceBlock name="category.description" remove="true"/>
            </container>
        </referenceContainer>
        <referenceContainer name="columns" htmlClass="columns fab-product-listing"/>
        <referenceContainer name="main.content" htmlTag="main" htmlClass="page-main product-listing"/>
    </body>
</page>
